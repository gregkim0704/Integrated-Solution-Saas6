{
  "name": "content-generator-webapp",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:local": "wrangler pages dev dist --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name content-generator",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "test:win": "powershell -Command \"Invoke-RestMethod -Uri http://localhost:3000\"",
    "install:force": "npm install --legacy-peer-deps",
    "start": "npm run build && npm run dev:local",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status"
  },
  "dependencies": {
    "hono": "^4.9.9"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251004.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@types/node": "^24.6.2",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "wrangler": "^4.42.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "@cloudflare/workers-types": "^4.20251001.0"
  }
}
